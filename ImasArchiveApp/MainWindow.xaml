<Window
    x:Class="ImasArchiveApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ImasArchiveApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="im@s Archive App"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.CommandBindings>
        <CommandBinding
            CanExecute="Open_CanExecute"
            Command="Open"
            Executed="Open_Executed" />
        <CommandBinding
            CanExecute="Close_CanExecute"
            Command="Close"
            Executed="Close_Executed" />
    </Window.CommandBindings>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Command="Open" />
                <MenuItem Command="Close" />
            </MenuItem>
        </Menu>
        <ListView
            Name="lvBrowser"
            Width="200"
            Margin="10"
            DockPanel.Dock="Left">
            <ListView.Resources>
                <Style TargetType="ListViewItem">
                    <EventSetter Event="MouseDoubleClick" Handler="ListViewItem_MouseDoubleClick" />
                </Style>
            </ListView.Resources>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <Image Source="{Binding Path=IconUri}" />
                        <TextBlock Text="{Binding Path=Name}" />
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Border
            Margin="10"
            BorderBrush="#FFABADB3"
            BorderThickness="1">
            <local:HexViewer
                x:Name="hxViewer"
                FontFamily="Consolas"
                FontSize="14" />
        </Border>
    </DockPanel>
</Window>
