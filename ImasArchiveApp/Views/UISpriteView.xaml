<UserControl
    x:Class="ImasArchiveApp.UISpriteView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ImasArchiveApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="720"
    d:DesignWidth="200"
    mc:Ignorable="d">
    <TabControl>
        <TabItem Header="Sprite">
            <local:UIElementImageView />
        </TabItem>
        <TabItem Header="Spritesheet">
            <Grid>
                <Image Source="/Icons/checkerboard.png" Stretch="UniformToFill" />
                <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Source="{Binding Path=SpriteSheetImageSource}" />
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>
