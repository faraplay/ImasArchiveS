<UserControl
    x:Class="ImasArchiveApp.UISpriteView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ImasArchiveApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=local:UISpriteModel}"
    d:DesignHeight="720"
    d:DesignWidth="200"
    mc:Ignorable="d">
    <TabControl>
        <TabItem Header="Sprite">
            <local:UIModelRenderer Model="{Binding}" />
        </TabItem>
        <TabItem Header="Spritesheet">
            <local:UIModelRenderer Model="{Binding Path=ParentSheet}" />
        </TabItem>
    </TabControl>
</UserControl>
