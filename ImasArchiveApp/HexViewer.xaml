<UserControl
    x:Class="ImasArchiveApp.HexViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="clr-namespace:ImasArchiveApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <DockPanel>
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="SizeChanged">
                <i:InvokeCommandAction Command="{Binding Path=UpdateDataTextCommand}" />
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <TextBlock
            x:Name="tbHeader"
            DockPanel.Dock="Top"
            Text="{Binding Path=HeaderText}" />
        <TextBlock x:Name="tbData" Text="{Binding Path=DataText}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="MouseWheel">
                    <i:InvokeCommandAction Command="{Binding Path=ScrollCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </TextBlock>
    </DockPanel>
</UserControl>
